<html>
  <head>
    <link rel="stylesheet" href="/style.css" />
    <style>
      body {
        background-image: url("/bg.svg");
        background-size: auto 100%;
        background-repeat: no-repeat;
      }
     </style>
  </head>

  <body>
  <div class="container">
    <div class="left_column">
      <div class = "header" style="display: flex;">
        <a href ="/">
        <img src="/chitter_logo.png" class="chitter-logo" style ="width: 140px; height: 140px;"></a>
        <h1 style="font-size: 45px;">Welcome<br>to<br>Chitter</h1>
      </div>

      <div class="spacer" style="padding-top:15px"><hr style="border-style:none;"></div>

      <div class="user_controls">
        <div class="posting_box" style="padding-left: 15px;">
          <%# <h2>Hi, @{username}!</h2> %>
          <br><br>
          <div class="user-buttons" style="text-align: center;">
          <button type="button">Log in!</button>
          <button type="button" onclick=window.location.href='/new_user'>Create an account</button>
          </div>
          <form method="POST" action="/">
            <label><h4>Peep something!</h4></label>
            <label><h5>Username:</h6></label>
            <input type="text" name="username" style="width:50%;" />
            <label><h5>Peep:</h6></label>
            <input type="text" name="peep" style="width:75%;" />
            <input type="submit" value="Peep this!">
          </form>
        </div>
      </div>
    </div>

    <div class = "feed">
      <h3 style="text-align: left;">:Recent Peeps:</h3>
      <hr>
        <table>
        <% @top_peeps[0..9].each do |content, timestamp, username, name, userid| %>
          <tr>
            <td>
              <div class="peep_container">
                <img src="<%="/"+userid.to_s+".png" %>" class="user_icon" style = "border-radius: 45%;">
                <div style="padding-bottom: 10px; padding-top: 5px; background-color: #999;"> 
                  <%= name %>(<a href = "/users/<%= userid %>">@<%= username %></a>) peeped: 
                  <br>
                  <%= content %>
                  <br>
                  <%= timestamp %> 
                </div>
                
                <br><br>
              </div>
              <hr>
            </td>
          </tr>
        <% end %>
        </table>
    </div>
    
  </div>
  </body>
</html>